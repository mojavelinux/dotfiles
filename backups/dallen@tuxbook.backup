<backup>
  <host name=""/>
  <repo path="/run/media/dallen/tera/dallen@tuxbook-backup" retention="7B"/>
  <setup>
    <script path="/home/dallen/bin/backup-ninja-script"/>
  </setup>
  <data exclude-devices="true" exclude-fifos="true" exclude-sockets="true">
