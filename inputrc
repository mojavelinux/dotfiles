# ~/.inputrc - readline customizations (man readline)

# Tilde expansion is done when processing completions
#set expand-tilde on

# Show completions after first press of TAB key
set show-all-if-ambiguous on

# Results in a character being appended to any file-names returned by completion
#set visible-stats on

# Don't show hidden files when doing completions
#set match-hidden-files off 

# Set editing mode to either emacs or vi
#set editing mode emacs

# Ignore case when doing completions
set completion-ignore-case on

# Scroll long command lines
#set horizontal-scroll-mode off

# Do not beep on tab-completion
set bell-style none

# Disable echo of ^C after Ctrl+C is pressed
#set echo-control-characters off

## <Ctrl>-R
#"\C-r": reverse-search-history
#
## <Alt>-R
#"\er": forward-search-history

# <Alt>-<Up>
"\e[1;3A": beginning-of-history

# <Alt>-<Down>
"\e[1;3B": end-of-history
